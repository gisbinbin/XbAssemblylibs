<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rowview_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_rowheight"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="12dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rowview_iconimage"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/message_blue_48px"
                android:padding="0dip"
                android:layout_marginRight="12dip"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/rowkey_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dip"
                android:layout_margin="0dip"
                android:textColor="@color/fontcolor2"
                android:text="当前版本"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/rowvalue_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="0dip"
                    android:layout_marginRight="0dip"
                    android:layout_marginLeft="12dip"
                    android:background="@null"
                    android:text="版本"
                    android:textColor="@color/fontcolor2"
                    android:visibility="gone"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/rowview_emphasesmarkview"
                    android:layout_width="8dip"
                    android:layout_height="8dip"
                    android:padding="0dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="0dip"
                    android:visibility="gone"
                    android:src="@drawable/circle_red"/>
                <ImageView
                    android:id="@+id/rowview_jumpmark"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/back_black_48px"
                    android:padding="0dip"
                    android:layout_marginLeft="12dip"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/rowview_splitters"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/pagebgcolor"/>
    </LinearLayout>
</merge>