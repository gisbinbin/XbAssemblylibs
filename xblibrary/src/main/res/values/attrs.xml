<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwitchButton">
        <attr name="sb_shadow_radius" format="reference|dimension"/>
        <attr name="sb_shadow_offset" format="reference|dimension"/>
        <attr name="sb_shadow_color" format="reference|color"/>
        <attr name="sb_uncheck_color" format="reference|color"/>
        <attr name="sb_checked_color" format="reference|color"/>

        <attr name="sb_border_width" format="reference|dimension"/>
        <attr name="sb_checkline_color" format="reference|color"/>
        <attr name="sb_checkline_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_color" format="reference|color"/>
        <attr name="sb_uncheckcircle_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_radius" format="reference|dimension"/>

        <attr name="sb_checked" format="reference|boolean"/>
        <attr name="sb_shadow_effect" format="reference|boolean"/>
        <attr name="sb_effect_duration" format="reference|integer"/>
        <attr name="sb_button_color" format="reference|color"/>
        <attr name="sb_show_indicator" format="reference|boolean"/>
        <attr name="sb_background" format="reference|color"/>
        <attr name="sb_enable_effect" format="reference|boolean"/>
    </declare-styleable>

    <declare-styleable name="ImageCircleView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        <attr name="fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="EditHeadImageView">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomRowView">
        <attr name="rowheight" format="dimension" />
        <attr name="keyvaluekey" format="string" />
        <attr name="valuevisibility" format="boolean"/>
        <attr name="keyvaluevalue" format="string" />
        <attr name="iconvisibility" format="boolean"/>
        <attr name="iconresources" format="reference" />
        <attr name="jumpmarkvisibility" format="boolean"/>
        <attr name="jumpmarresources" format="reference|integer" />
        <attr name="emphasesmarkvisibility" format="boolean"/>
        <attr name="splittersvisibility" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="CustomTabBtnView">
        <attr name="Tabiconvisibility" format="boolean"/>
        <attr name="Tabiconresources" format="reference" />
        <attr name="selectedTabiconresources" format="reference" />
        <attr name="Tabiconwidth" format="dimension"/>
        <attr name="Tabiconheight" format="dimension"/>
        <attr name="textsize" format="dimension"/>
        <attr name="textcolor"  format="reference"/>
        <attr name="selectedtextcolor"  format="reference"/>
        <attr name="text" format="string|reference" />
        <attr name="bottomvisibility" format="boolean"/>
        <attr name="bottombackground" format="reference" />
        <attr name="selected" format="boolean"/>
    </declare-styleable>
</resources>